# Pour convertir en HTML5

pandoc -F pandoc-crossref -F pandoc-citeproc -F ./includes -f markdown -t html5 -c fichiers/css/github-pandoc.css -V lang=fr -S -s QRH_BD.md -o QRH_BD.html

# Pour convertir en epub3 (mais au niveau du CSS ça ne marche pas bien !)

pandoc -F pandoc-crossref -F pandoc-citeproc -F ./includes -f markdown -t epub3 -c fichiers/css/github-pandoc.css -V lang=fr -S -s QRH_BD.md -o QRH_BD.epub

# Pour convertir en PDF mais le résultat n'est pas aussi bien que je voudrais

pandoc -F pandoc-crossref -F pandoc-citeproc -F ./includes -f markdown -V lang=french -S -s QRH_BD.md -o QRH_BD.pdf --template=mytemplate.tex  --latex-engine=lualatex --toc

